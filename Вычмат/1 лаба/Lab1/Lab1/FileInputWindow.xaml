<Window x:Class="Lab1.FileInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1"
        mc:Ignorable="d"
        Title="Введите название файла" Height="70" Width="300">
    <Grid>
        <WrapPanel Margin="0,0,-0.4,0">
            <TextBox Name="FileInputTextBox" Margin="3,5,0,0" Height="25" Width="200" Text="save1.xml"/>
            <Button x:Name="LoadFileButton" Margin="10,5,0,0" Height="20" Width="70" Content="Загрузить" Click="LoadFileButton_Click"/>
        </WrapPanel>
    </Grid>
</Window>
